{
  "name": "trading-signal-platform-backend",
  "version": "1.0.0",
  "description": "Professional trading signal generation backend using Fabio Playbook, AMT, and Volume Profile",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:integration": "vitest run --include 'tests/integration/**'",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "db:migrate": "node dist/persistence/migrations/index.js"
  },
  "keywords": ["trading", "signals", "AMT", "volume-profile", "order-flow"],
  "author": "Trading Platform",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "ws": "^8.14.2",
    "axios": "^1.6.2",
    "cors": "^2.8.5",
    "uuid": "^9.0.1",
    "dotenv": "^16.3.1",
    "zod": "^3.22.4",
    "pino": "^8.17.2",
    "pino-http": "^8.6.1"
  },
  "devDependencies": {
    "typescript": "^5.3.3",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.6",
    "@types/ws": "^8.5.10",
    "@types/cors": "^2.8.17",
    "tsx": "^4.7.0",
    "vitest": "^1.1.0",
    "@vitest/ui": "^1.1.0",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
